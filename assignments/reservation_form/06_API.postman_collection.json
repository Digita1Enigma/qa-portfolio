{
  "info": {
    "_postman_id": "1f7bb7f5-041c-41d9-acc8-bae48b34c9a7",
    "name": "Assignment — Users API (fixed)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "48011241"
  },
  "variable": [
    {
      "key": "mockBaseUrl",
      "value": "https://<mock-id>.mock.pstmn.io",
      "type": "string",
      "description": "Set your Postman Mock URL here"
    }
  ],
  "item": [
    {
      "name": "Create user — success (201)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"201 Created\", () => pm.response.code === 201);",
              "pm.test(\"Body has id\", () => {",
              "  const b = pm.response.json();",
              "  pm.expect(b && b.id !== undefined).to.be.true;",
              "});"
            ]
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.variables.set(\"uniqEmail\", `vlad+${Date.now()}@example.com`);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Влад\",\n  \"email\": \"{{uniqEmail}}\",\n  \"age\": 26\n}"
        },
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/users",
          "protocol": "https",
          "host": [
            "jsonplaceholder",
            "typicode",
            "com"
          ],
          "path": [
            "users"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create user — invalid name (400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"400 expected\", () => pm.response.code === 400);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
